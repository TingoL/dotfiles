# Write your default config options here!

#vo=opengl-hq        # video driver
vo=xv

fs=no           # use fullscreen mode by default
geometry=25%:25%    # force starting with centered window

# Audio Settings
ao=alsa         # audio driver
volume=100      # volume level
softvol=no      # disable/enable softvol
alang=jpn,japanese  # audio language to use

# Subtitle Settings
#aid=1          # use ID* track for audio
sid=0           # use ID* track for audio
slang=eng,english   # subtitle language

# Other Settings
msgmodule=no        # show modules
msgcolor=yes        # moar colors!!
quiet=yes       # make mpv to report less
framedrop=yes   # Drop frames to preserve audio/video sync.
subcp=cp1250
cache=8192      # use 8MB input cache by default
cache-min=20.0      # prefill 20% of the cache before starting playback
screenshot-format=png   # screenshot format to use (.jpg/.png)
