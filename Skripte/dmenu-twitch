#!/bin/bash

DMENU="dmenu -h 28 -o 0.8 -dim 0.5 -y 350 -nb #1c2027 -nf #ffffff -sb #2980b9 -sf #ffffff -fn SourceCodePro-14:Medium"

choice=$(echo -e "jdred\njddm\nd2l\nbts\nbts2\nsheever\ndendi\nmerlini\nsingsing\nxboct\nadmiralbulldog\nkolento\n" | $DMENU | cut -f 1)

case "$choice" in
    jddm) livestreamer -p mpv livestreamer http://www.dailymotion.com/video/x1b1h6o 360p  ;;
    jdred) livestreamer -p mpv twitch.tv/joindotared Medium ;;
    d2l) livestreamer -p mpv twitch.tv/d2l Medium ;;
    bts) livestreamer -p mpv twitch.tv/beyondthesummit Medium ;;
    bts2) livestreamer -p mpv twitch.tv/beyondthesummit2 Medium ;;
    sheever) livestreamer -p mpv twitch.tv/sheevergaming Medium ;;
    dendi) livestreamer -p mpv twitch.tv/dendi Medium ;;
    merlini) livestreamer -p mpv twitch.tv/merlinidota Medium ;;
    singsing) livestreamer -p mpv twitch.tv/sing_sing Medium ;;
    xboct) livestreamer -p mpv twitch.tv/xboct Medium ;;
    admiralbulldog) livestreamer -p mpv twitch.tv/admiralbulldog Medium ;;
    kolento) livestreamer  -p mpv twitch.tv/kolento Medium ;;
esac
