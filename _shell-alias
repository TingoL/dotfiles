#list of aliases compatible with bash/zsh
alias gitlog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias hdvideo='mplayer -vo xv -ao alsa -lavdopts fast=1:skiploopfilter=all'
alias mmv='noglob zmv -W'
alias dccanime='mv ~/.weechat/xfer/* ~/Downloads'
alias ramdir='mount -t tmpfs tmpfs /mnt -o size=1024m'
alias balls='cd $HOME/Dropbox/Stuff/Dropballs/ && python2 test1.py tingol && cd -'
alias python='python2'
alias trc='transmission-remote-cli'
alias pip='sudo pip2'
alias els='els --els-icons=fontawesome'
alias v='f -e vim'
alias o='a -e xdg-open' # quick opening files with xdg-open
alias pdf='f -e zathura'
alias sega='f -e dgen'
alias vless='/usr/share/vim/vim74/macros/less.sh'
alias izbrisi='sudo pacman -Rs'
alias srb='setxkbmap hr'
alias eng='setxkbmap us'
alias ls='ls --color=auto'
alias off='sudo shutdown -h $1'
alias gping='ping -c 3 www.google.com'
alias ducks='du -cksh *|sort -rh |head -11'
alias json="python -mjson.tool"
alias upg="packer -Syu"
alias htpc="ssh -p 2222 tingol@192.168.1.66"
alias deskss='scrot -cd 1 current.png && imgurup current.png | xclip -selection clipboard && notify-send "image uploaded successfully, address copied to buffer"'
alias tng='play -c 2 -n -c1 synth whitenoise lowpass -1 120 lowpass -1 120 lowpass -1 120 gain +10'
alias magnet='aria2c --bt-metadata-only=true --bt-save-metadata=true'
alias pirate='pirate-get -t'
alias xperiaon='lftp 192.168.1.33:2121 -u ftp,ftp'
alias news='newsbeuter -q'
alias screenoff='xset dpms force standby'
